@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor STORAGE_COLOR
skinparam classBackgroundColor STORAGE_COLOR

package Storage as StoragePackage {

package "UserPrefs Storage" #F4F6F6{
Class "<<interface>>\nUserPrefsStorage" as UserPrefsStorage
Class JsonUserPrefsStorage
}

Class "<<interface>>\nStorage" as Storage
Class StorageManager

package "Maplet Storage" #F4F6F6{
  Class "<<interface>>\nMapletStorage" as MapletStorage
    Class JsonMapletStorage
    Class JsonSerializableMaplet
    Class JsonAdaptedAttraction
    Class JsonAdaptedTag
    Class JsonAdaptedLocation
    Class JsonAdaptedItinerary
}

}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Storage

StorageManager .up.|> Storage
StorageManager -up-> "1" UserPrefsStorage
StorageManager -up-> "1" MapletStorage

Storage -left-|> UserPrefsStorage
Storage -right-|> MapletStorage

JsonUserPrefsStorage .up.|> UserPrefsStorage
JsonMapletStorage .up.|> MapletStorage
JsonMapletStorage ..> JsonSerializableMaplet
JsonSerializableMaplet --> "*" JsonAdaptedAttraction
JsonSerializableMaplet --> "*" JsonAdaptedLocation
JsonSerializableMaplet --> "*" JsonAdaptedItinerary
JsonAdaptedAttraction --> "*" JsonAdaptedTag

@enduml
