<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Scene?>
<?import javafx.stage.Stage?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>

<fx:root title="Edit" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <scene>
        <Scene width="400" height="300">
            <ScrollPane fitToWidth="true">
                <Label text="Edit Contact" styleClass="edit-title" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

                <GridPane fx:id="gridPane" hgap="10" vgap="15" alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints minWidth="100" prefWidth="100" halignment="RIGHT"/>
                        <ColumnConstraints minWidth="300" prefWidth="300" hgrow="ALWAYS"/>
                    </columnConstraints>

                    <Label text="Name" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="name" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <Label text="Priority" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <TextField fx:id="priority" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                    <Label text="Contact" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <TextField fx:id="contact" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                    <Label text="Address" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <TextField fx:id="address" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                    <Label text="Activities" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                    <TextField fx:id="activities" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                    <Label text="Opening hours" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                    <TextField fx:id="openTime" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

                    <Label text="Price" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                    <TextField fx:id="price" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

                </GridPane>
            </ScrollPane>
        </Scene>
    </scene>
</fx:root>
